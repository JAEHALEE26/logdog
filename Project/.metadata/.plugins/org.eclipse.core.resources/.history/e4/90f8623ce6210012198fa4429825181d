package com.logdog.server.TestCase;

import java.io.IOException;

import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;
import com.logdog.server.Model.GsonRefer.ClientReportData;

@SuppressWarnings("serial")
public class GsonInputCase  extends HttpServlet {
	public void doGet(HttpServletRequest req, HttpServletResponse resp) throws IOException {		
	    Gson gson = new Gson();
	    ClientReportData nData = new ClientReportData();
	
	    
	    resp.setContentType("application/json");
	    resp.getWriter().println(gson.toJson(nData));
	    
	}
	public void doPost(HttpServletRequest req, HttpServletResponse resp) throws IOException {		
	    Gson gson = new Gson();
	    ClientReportData readData = gson.fromJson(req.getParameter("json"), ClientReportData.class);
	    
	    resp.setContentType("application/json");
	    resp.getWriter().println(gson.toJson(readData));
	    
	}
	
}